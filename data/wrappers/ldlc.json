{
  "_id": "ldlc",
  "name": "ldlc",
  "pattern": [
     "/fiche/PB\\d+\\.html"
  ],
  "rules": {
   	"name":        "//span[@class='fn designation_courte'][1]/text()",
    "description": "//span[@id='ctl00_cphMainContent_lbChapeau'][1]/text()",
    "price": "//span[@class='price sale'][1]/text()",
    "brand": "//tr[@class='allparams even'][1]/td[@class='productParameterValues rowEven']/div/a/text()",
    "model": "//tr[@class='allparams odd'][2]/td[@class='productParameterValues rowOdd']/div/span/text()",
    "thumbnail": "//img[@id='ctl00_cphMainContent_ImgProduct']/@src"
  },
  "target" : "product"
}
