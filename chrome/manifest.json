{
  "manifest_version": 2,

  "name": "Tess Labeler",
  "description": "Extension to help gather data for Tess",
  "version": "1.0",
  "icons": { "48" : "icon.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["inject.js"]
    }
  ],
  "background": {
    "scripts" : ["background.js"]
  },
  "permissions": [
    "debugger",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*",
    "notifications",
    "topSites"
  ],
  "commands": {
    "labelPage": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "shortcut": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Opens the extension to label the current page"
    }
  }
}
